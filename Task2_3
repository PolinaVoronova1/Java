public class Task3_3 {
    public static void main(String[] args) {
        int i = 1;
        while (i<=8) {
            int j = i;
            String format = "%" + (9-i) + "s";
            System.out.printf(format,'*');
            while (j > 1) {

                System.out.print('*');
                j--;
            }
            System.out.println();
            i++;
        }
    }
}

public class Validator {

       public static class YearException extends Exception{
        @Override
        public String getMessage() {
            return "Wrong Year of publication! Be careful.";
            }
        }
        public static class PriceException extends Exception{
            @Override
            public String getMessage() {
                return "Wrong Price of the book. Be careful.";
            }
        }

}

public class Task3_2 {

    public static void main(String[] args) {

        int i = 1;
        while (i<=8) {
            int j = 8-i;
            String format = "%" + i + "s";
            System.out.printf(format,'*');
            while (j > 0) {

                System.out.print('*');
                j--;
            }
            System.out.println();
            i++;
        }
    }
}
